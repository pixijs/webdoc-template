{
  "name": "@pixi/webdoc-template",
  "version": "1.5.5",
  "description": "PixiJS' webdoc template for API documentation",
  "keywords": [
    "pixi.js",
    "pixi",
    "webdoc",
    "documentation"
  ],
  "homepage": "https://github.com/pixijs/webdoc-template#readme",
  "bugs": {
    "url": "https://github.com/pixijs/webdoc-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixijs/webdoc-template.git"
  },
  "license": "MIT",
  "author": "Shukant K. Pal <shukantpal@outlook.com>",
  "main": "publish.js",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint --cache --ext .ts src --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "postversion": "git push && git push --tags",
    "watch": "tsc -w"
  },
  "dependencies": {
    "fs-extra": "^11.1.0",
    "markdown-table": "^3.0.3",
    "node-html-markdown": "^1.3.0"
  },
  "devDependencies": {
    "@pixi/eslint-config": "^4.0.1",
    "@types/node": "^18.13.0",
    "clean-package": "^1.0.1",
    "eslint": "^8.33.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "@webdoc/model": "^2.2.0",
    "@webdoc/template-library": "^2.2.0"
  },
  "engines": {
    "node": ">= 12",
    "npm": ">= 6",
    "pnpm": "please-use-npm",
    "yarn": "please-use-npm"
  },
  "publishConfig": {
    "access": "public"
  },
  "clean-package": {
    "indent": 2,
    "remove": [
      "clean-package",
      "scripts",
      "engines",
      "pre-commit",
      "devDependencies"
    ]
  }
}
